<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/SwipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/rel_sliderimage"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/seven"
                        android:orientation="vertical"
                        app:cardCornerRadius="@dimen/ten">

                        <com.daimajia.slider.library.SliderLayout
                            android:id="@+id/imageSlider"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            app:auto_cycle="true"
                            app:indicator_visibility="visible">


                        </com.daimajia.slider.library.SliderLayout>

                        <ImageButton
                            android:id="@+id/back"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="@dimen/seven"
                            android:layout_marginTop="@dimen/seven"
                            android:background="@color/transparent"
                            android:src="@drawable/backarrow" />

                    </androidx.cardview.widget.CardView>


                </RelativeLayout>

                <LinearLayout
                    android:id="@+id/second_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/seven"
                    android:layout_marginTop="@dimen/seven"
                    android:layout_marginEnd="@dimen/seven"
                    android:layout_marginBottom="@dimen/seven"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/rel_update_business"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="180dp">


                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/iv_busi_profile"
                            android:layout_width="@dimen/standard_130"
                            android:layout_height="@dimen/standard_130"
                            android:background="@drawable/image_background"
                            android:padding="@dimen/three"
                            android:src="@drawable/businss" />

                        <ImageView
                            android:id="@+id/iv_edit_business"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginEnd="@dimen/ten"
                            android:layout_marginBottom="@dimen/ten"
                            android:src="@drawable/edit" />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/btn_varient"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="end"
                        android:layout_marginStart="@dimen/ten"
                        android:layout_marginEnd="@dimen/ten"
                        android:layout_weight="1"
                        android:background="@drawable/button_background"
                        android:gravity="center"
                        android:inputType="textCapCharacters"
                        android:padding="@dimen/seven"
                        android:paddingStart="@dimen/seven"
                        android:paddingEnd="@dimen/seven"
                        android:text="My Business"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/seven"
                        app:cardCornerRadius="@dimen/five"
                        app:cardElevation="@dimen/five"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/linLay"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@color/gray_separator"
                            android:gravity="center"
                            android:orientation="horizontal">


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="@dimen/five"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="vertical"
                                android:padding="@dimen/seven">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="7dp"
                                    android:elevation="@dimen/five"
                                    android:padding="@dimen/five"
                                    android:src="@drawable/call" />

                                <TextView
                                    android:id="@+id/tv_mobile"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="BCS(Software Dev)."
                                    android:textColor="@color/apptheme"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />


                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="75dp"
                                android:layout_marginStart="@dimen/three"
                                android:layout_marginEnd="@dimen/three"
                                android:background="@color/pin_normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="@dimen/five"
                                android:layout_weight="1"
                                android:gravity="start"
                                android:orientation="vertical"
                                android:padding="@dimen/seven">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="7dp"
                                    android:elevation="@dimen/five"
                                    android:padding="@dimen/five"
                                    android:src="@drawable/email1" />

                                <TextView
                                    android:id="@+id/tv_email_id"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:singleLine="true"
                                    android:text="Nashik,Maharashtra"
                                    android:textColor="@color/apptheme"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />


                            </LinearLayout>

                            <View
                                android:layout_width="1dp"
                                android:layout_height="75dp"
                                android:layout_marginStart="@dimen/three"
                                android:layout_marginEnd="@dimen/three"
                                android:background="@color/pin_normal" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_margin="@dimen/five"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:padding="@dimen/seven">

                                <ImageView
                                    android:layout_width="35dp"
                                    android:layout_height="35dp"
                                    android:layout_gravity="center"
                                    android:layout_margin="7dp"
                                    android:elevation="@dimen/five"
                                    android:padding="@dimen/five"
                                    android:src="@drawable/address" />

                                <TextView
                                    android:id="@+id/tv_address"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:singleLine="true"
                                    android:text="gsdfgsdg"
                                    android:textColor="@color/apptheme"
                                    android:textSize="@dimen/twelve"
                                    android:textStyle="normal" />


                            </LinearLayout>
                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="Business Description:"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_desc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="5"
                        android:padding="@dimen/seven"
                        android:text="The Business app puts the power in the hands of the business owner. With an easy-to-use interface and powerful features, it helps you get the most out of your WedMeGood listing. You can create and manage your profile, reply to enquiries and reviews from customers, view analytics, track business generated from WedMeGood, and more, on the go."
                        android:textColor="@color/black"
                        android:textSize="13sp" />


                    <TextView
                        android:id="@+id/text_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/seven"
                        android:layout_weight="1"
                        android:text="Our Time"
                        android:textColor="@color/yellow_2"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_times"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ten"
                        android:layout_weight="1"
                        android:text="Social Link's"
                        android:textColor="@color/yellow_2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="invisible" />

                    <LinearLayout
                        android:id="@+id/linear"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/iv_webite"
                            android:layout_width="@dimen/thirtyfive"
                            android:layout_height="@dimen/thirtyfive"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/three"
                            android:layout_marginTop="@dimen/seven"
                            android:layout_marginEnd="@dimen/three"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/website"
                            android:padding="@dimen/ten" />

                        <ImageView
                            android:id="@+id/iv_facebook"
                            android:layout_width="@dimen/thirtyfive"
                            android:layout_height="@dimen/thirtyfive"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/three"
                            android:layout_marginTop="@dimen/seven"
                            android:layout_marginEnd="@dimen/three"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/facebook"
                            android:padding="@dimen/fifteen" />


                        <ImageView
                            android:id="@+id/iv_twitter"
                            android:layout_width="@dimen/thirtyfive"
                            android:layout_height="@dimen/thirtyfive"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/three"
                            android:layout_marginTop="@dimen/seven"
                            android:layout_marginEnd="@dimen/three"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/twitter"
                            android:padding="@dimen/ten" />

                        <ImageView
                            android:id="@+id/iv_youtube"
                            android:layout_width="@dimen/thirtyfive"
                            android:layout_height="@dimen/thirtyfive"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/three"
                            android:layout_marginTop="@dimen/seven"
                            android:layout_marginEnd="@dimen/three"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/youtubepng"
                            android:scaleType="fitXY" />

                        <ImageView
                            android:id="@+id/iv_googlemap"
                            android:layout_width="@dimen/thirtyfive"
                            android:layout_height="@dimen/thirtyfive"
                            android:layout_gravity="center"
                            android:layout_marginStart="@dimen/three"
                            android:layout_marginTop="@dimen/seven"
                            android:layout_marginEnd="@dimen/three"
                            android:layout_marginBottom="@dimen/ten"
                            android:background="@drawable/map"
                            android:padding="@dimen/ten" />

                    </LinearLayout>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/card3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/card2"
                        android:layout_marginHorizontal="10dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="60dp"
                        android:background="@color/white"
                        app:cardCornerRadius="18dp"
                        app:cardElevation="3dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/txthistory"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="13dp"
                                android:layout_marginTop="10dp"
                                android:fontFamily="@font/baloo"
                                android:text="History"
                                android:textColor="@color/black"
                                android:textSize="12dp"
                                android:textStyle="bold" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginVertical="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:id="@+id/requestUser"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/reqBook"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/userrequestimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:text="User \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/requestApprove"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/ActepBook"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/userapproveimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="center"
                                        android:text="Approved \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/requestDisaaprove"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/Disaaprove"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/userdisapproveimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Disapprove \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:orientation="horizontal"
                                android:weightSum="3">

                                <LinearLayout
                                    android:id="@+id/requestComplete"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/compBook"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/usercompleteimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Completed \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/requestCancel"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/cancelBook"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/usercancelimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Canceled \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>

                                <LinearLayout
                                    android:id="@+id/requestReject"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="top"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <ImageView
                                        android:id="@+id/Reject"
                                        android:layout_width="80dp"
                                        android:layout_height="80dp"
                                        android:layout_gravity="center"
                                        android:padding="8dp"
                                        android:src="@drawable/userrejectimg" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:text="Reject \nRequest"
                                        android:textAlignment="center"
                                        android:textColor="@color/black"
                                        android:textSize="12dp"
                                        android:textStyle="bold" />


                                </LinearLayout>


                            </LinearLayout>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>


                </LinearLayout>


            </RelativeLayout>


        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <FrameLayout
        android:id="@+id/linLayHeader"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:id="@+id/fabLayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/standard_90"
            android:layout_marginRight="@dimen/standard_23"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:padding="@dimen/twelve"
            android:visibility="gone"
            app:layout_behavior="com.example.karadvenderapp.MyLib.MoveUpwardBehavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/seven"
                android:background="@drawable/button_background"
                android:padding="@dimen/seven"
                android:text="Add Photos"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fab1"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:gravity="center_vertical"
                android:src="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fabLayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/standard_23"
            android:layout_marginBottom="@dimen/standard_55"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:padding="@dimen/twelve"
            android:visibility="gone"
            app:layout_behavior="com.example.karadvenderapp.MyLib.MoveUpwardBehavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/seven"
                android:background="@drawable/button_background"
                android:padding="@dimen/seven"
                android:text="Add Business Time"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fab3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:gravity="center_vertical"
                android:src="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/fabLayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="@dimen/standard_60"
            android:layout_marginRight="@dimen/standard_23"
            android:layout_marginBottom="@dimen/standard_23"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:padding="@dimen/twelve"
            android:visibility="gone"
            app:layout_behavior="com.example.karadvenderapp.MyLib.MoveUpwardBehavior">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/seven"
                android:background="@drawable/button_background"
                android:padding="@dimen/seven"
                android:text="Add Business Varient"
                android:textColor="@color/white"
                android:textStyle="bold" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fab2"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="bottom|end"
                android:gravity="center_vertical"
                android:src="@drawable/edit" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_marginRight="@dimen/fab_margin"
            android:layout_marginBottom="@dimen/fab_margin"
            android:clipToPadding="false"
            android:gravity="center_vertical"
            android:padding="@dimen/twelve"
            app:layout_behavior="com.example.karadvenderapp.MyLib.MoveUpwardBehavior">


            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/fab"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|end"
                android:background="@drawable/circel_background_app_theme"
                android:gravity="center_vertical"
                android:padding="@dimen/seven"
                android:src="@drawable/ic_baseline_add_24" />
        </LinearLayout>
    </FrameLayout>
</RelativeLayout>
