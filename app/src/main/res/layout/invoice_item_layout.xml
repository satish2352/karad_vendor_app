<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_busi_1"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginEnd="@dimen/ten"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/three"
        app:cardUseCompatPadding="true">

        <View
            android:id="@+id/view_card"
            android:layout_width="10dp"
            android:layout_height="wrap_content"
            android:background="@color/apptheme" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:padding="@dimen/ten"
                android:text="Business 1"
                android:textColor="@color/black"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="8dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tvPackageName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="@dimen/ten"
                    android:text="Pacakage Name"
                    android:singleLine="true"
                    android:textSize="20dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/tvPackageAmt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:padding="@dimen/ten"
                    android:text="100/-"
                    android:textSize="20dp"
                    android:layout_weight="2.5"
                    android:textColor="@color/black"/>

                <ImageView
                    android:id="@+id/tv_ViewDetail"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="5dp"
                    android:adjustViewBounds="true"
                    android:background="@drawable/circel_background_app_theme"
                    android:padding="@dimen/five"
                    android:src="@drawable/ic_chevron_right_black_24dp"
                    android:visibility="visible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_business_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="10dp"
                android:gravity="right"
                android:padding="@dimen/five"
                android:text="Business 1"
                android:textColor="@color/grey_dark"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />






        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
