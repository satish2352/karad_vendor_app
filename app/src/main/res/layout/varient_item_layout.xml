<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_busi_1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginStart="@dimen/twenty"
        android:layout_marginEnd="@dimen/twenty"
        app:cardCornerRadius="@dimen/ten"
        app:cardElevation="@dimen/five"
        app:cardUseCompatPadding="true">

        <View
            android:id="@+id/view_card"
            android:layout_width="7dp"
            android:layout_height="wrap_content"
            android:background="@color/yellow_2" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView_back"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:alpha="0.4"
                android:background="@drawable/card_background"
                android:scaleType="fitXY" />


            <TextView
                android:id="@+id/tv_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/seven"
                android:gravity="start"
                android:padding="@dimen/ten"
                android:text="Business 1"
                android:textColor="@color/white"
                android:textSize="@dimen/twenty"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/tv_business_details"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_business_name"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/ten"
                android:gravity="start"
                android:maxLines="2"
                android:padding="@dimen/five"
                android:text="Business 1"
                android:textColor="@color/white"
                android:textSize="@dimen/fifteen"
                android:textStyle="bold" />

            <ImageView
                android:layout_below="@+id/tv_business_details"
                android:id="@+id/tv_ViewDetail"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:adjustViewBounds="true"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_baseline_more_vert_24"
                android:layout_margin="@dimen/five"
                android:layout_marginEnd="@dimen/ten"
                android:padding="@dimen/five"
                android:visibility="visible"/>
            <TextView
                android:id="@+id/tv_count_center"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_alignParentEnd="true"
                android:layout_gravity="center"
                android:layout_margin="@dimen/five"
                android:layout_marginTop="@dimen/one"
                android:background="@drawable/circle_background_yellow"
                android:gravity="center"
                android:maxLength="2"
                android:text="0"
                android:textColor="@color/white"
                android:textStyle="bold" />


        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
