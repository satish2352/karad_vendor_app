<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/twenty">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/thirty"
            android:orientation="vertical"
            app:cardCornerRadius="@dimen/ten"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/verical_view"
                    android:layout_width="10dp"
                    android:layout_height="250dp"
                    android:background="@color/green" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/package_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="@dimen/fifty"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="Basic"
                        android:textColor="@color/green"
                        android:textSize="29dp"
                        android:textStyle="bold" />


                    <TextView
                        android:id="@+id/busi_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:padding="@dimen/ten"
                        android:text="Services"
                        android:textColor="@color/black"
                        android:textSize="20dp"
                        android:textStyle="normal" />
                    <TextView
                        android:id="@+id/tv_no_days"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:padding="@dimen/ten"
                        android:text="Validity 120 days"
                        android:textColor="@color/grey_dark"
                        android:textSize="17dp"
                        android:textStyle="normal" />




                    <Button
                        android:id="@+id/btn_shop"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_gravity="center"
                        android:layout_margin="@dimen/ten"
                        android:background="@drawable/button_background_green"
                        android:fontFamily="@font/antic"
                        android:gravity="center"
                        android:text="shop now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/fifteen"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/linear_circle"
        android:layout_width="@dimen/standard_100"
        android:layout_height="@dimen/standard_100"
        android:layout_marginStart="@dimen/ten"
        android:layout_marginTop="@dimen/fifty"
        android:background="@drawable/circle_red"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="$ 500"
            android:textColor="@color/white"
            android:textSize="@dimen/twenty"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Per Month"
            android:textColor="@color/white"
            android:textSize="@dimen/twelve"
            android:textStyle="bold" />

    </LinearLayout>

</RelativeLayout>
