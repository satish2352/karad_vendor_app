<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".Activity.AddBusinessPhoto">
    <include layout="@layout/toolbar"
        android:id="@+id/toolbar"/>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/fifteen"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tv_firstImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photograph 1:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/ten"
                android:drawableRight="@drawable/ic_upload"
                android:layout_marginBottom="@dimen/five" />
            <ImageView
                android:id="@+id/iv_first"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_secondImage"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photograph 2:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/ten"
                android:drawableRight="@drawable/ic_upload"
                android:layout_marginBottom="@dimen/five" />
            <ImageView
                android:id="@+id/iv_second"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_thridImage"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photograph 3:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/ten"
                android:drawableRight="@drawable/ic_upload"
                android:layout_marginBottom="@dimen/five" />
            <ImageView
                android:id="@+id/iv_thrid"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_fourthImage"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photograph 4:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/ten"
                android:drawableRight="@drawable/ic_upload"
                android:layout_marginBottom="@dimen/five" />
            <ImageView
                android:id="@+id/iv_fourth"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:adjustViewBounds="true"/>

            <TextView
                android:id="@+id/tv_fifitImage"
                android:layout_marginTop="@dimen/ten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Photograph 5:"
                android:textColor="@color/black"
                android:textSize="18dp"
                android:textStyle="bold"
                android:padding="@dimen/ten"
                android:drawableRight="@drawable/ic_upload"
                android:layout_marginBottom="@dimen/five" />
            <ImageView
                android:id="@+id/iv_fifit"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="start"
                android:scaleType="fitXY"
                android:src="@drawable/app_logo"
                android:adjustViewBounds="true"/>

        </LinearLayout>




    </androidx.core.widget.NestedScrollView>

</RelativeLayout>